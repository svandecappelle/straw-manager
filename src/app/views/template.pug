doctype html
html(lang="en")
  head
    if rootPath
      link(rel="stylesheet", type="text/css", href=rootPath + "public/assets/bootstrap/dist/css/bootstrap.min.css")
      script(src=rootPath + "public/assets/jquery/dist/jquery.min.js")
      script(src=rootPath + "public/assets/bootstrap/dist/js/bootstrap.js")
    else
      link(rel="stylesheet", type="text/css", href="/public/assets/bootstrap/dist/css/bootstrap.min.css")
      script(src="/public/assets/jquery/dist/jquery.min.js")
      script(src="/public/assets/bootstrap/dist/js/bootstrap.js")      
  body
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          .collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a#root-collect-online(href=rootPath) Home
              li#auto-refresh
                a(href="#") auto-refresh
            form.navbar-form.navbar-left
              .form-group
                input.form-control#search(type="text", placeholder="Search")

        ul.nav.navbar-nav.navbar-right.pull-right(style='padding: 15px;')
          li
            if session
              .dropdown
                a.dropdown-toggle(href="#", type="button", id="usermenu", data-toggle="dropdown", aria-haspopup="false", aria-expanded="false")= session.username
                  span.caret
                ul.dropdown-menu(aria-labelledby="usermenu")
                  li
                    a(href="/logout") Logout
            else
              a(href="/login") Login
    div
      block body
    
    script
      :coffee-script
        $ -> 
          $('.dropdown-toggle').dropdown()
          rootPath = $("#root-collect-online").attr("href")
          $("#search").on 'change', ->
            window.location.replace(rootPath + 'search?q=' + $("#search").val())
          $("#search").on 'keypress', (e) ->
            if e.keyCode == 13
              e.preventDefault()
              window.location.replace(rootPath + 'search?q=' + $("#search").val())
